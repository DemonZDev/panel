<%- include('../components/admin_template') %>
<main id="content">
   <div class="bg-transparent">
    <section class="mt-12 mb-12 flex justify-center">
      <div class="max-w-7xl w-full">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-semibold text-white heavy">Platform Statistics</h2>
        </div>
        <!-- Main Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
          <!-- Total Users -->
          <div class="bg-white/5 p-6 rounded-2xl border border-white/5 hover:bg-white/[0.07] transition-colors">
            <div class="flex items-center gap-4">
              <div>
                <p class="text-sm font-medium text-white/60">Total Users</p>
                <p class="text-2xl font-semibold text-white mt-1"><%= usersTotal %></p>
              </div>
            </div>
          </div>
    
          <!-- Active Servers -->
          <div class="bg-white/5 p-6 rounded-2xl border border-white/5 hover:bg-white/[0.07] transition-colors">
            <div class="flex items-center gap-4">
              <div>
                <p class="text-sm font-medium text-white/60">Active Servers</p>
                <p class="text-2xl font-semibold text-white mt-1"><%= instancesTotal %></p>
              </div>
            </div>
          </div>
    
          <!-- Total Nodes -->
          <div class="bg-white/5 p-6 rounded-2xl border border-white/5 hover:bg-white/[0.07] transition-colors">
            <div class="flex items-center gap-4">
              <div>
                <p class="text-sm font-medium text-white/60">Nodes</p>
                <p class="text-2xl font-semibold text-white mt-1"><%= nodesTotal %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
       
    </div>
  
   
   </div>
  
</main>
<%- include('../components/footer') %>
